@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Blog Başlığı </th>
                                <th> Blog Kategorisi </th>
                                <th> Tarih </th>
                                <th>Detaylar</th>
                                @*<th> Tracking ID </th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image"> @item.BlogTitle
                                    </td>
                                    @*<td>  </td>*@
                                    <td>
                                        @*<label class="badge badge-gradient-success">@item.Category.CategoryName</label>*@
                                    </td>
                                    <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                    @*<td> WD-12345 </td>*@
                                    <td>
                                        <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-dark">Blog'a Git</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
